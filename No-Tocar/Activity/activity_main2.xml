<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="app.innovanic.com.ensename.Main2Activity"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:id="@+id/imageView"
        android:background="@drawable/ense"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textAlignment="gravity"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:id="@+id/scrollView2"
        android:textAlignment="gravity"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Esta aplicación ha sido posible gracias a la colaboración de la escuela cristiana de sordos de Nicaragua y demas participantes, en conjunto con Innovanic S.A. Deseamos con esto romper las barreras de la comunicación entre un oyente y un no oyente. Esperamos que le puedas sacar el máximo provecho.  Prohibida su venta. Esta aplicación está bajo la licencia de código abierto Creative Commons, Atribución-NoComercial-CompartirIgual 4.0 Internacional."
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:layout_marginBottom="60dp"/>

    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Innovanic ©CopyRight 2016"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:id="@+id/imageButton"
        android:text="Facebook"
        android:onClick="openfacebook"
        android:background="@drawable/facebook"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"

        />
</LinearLayout>
